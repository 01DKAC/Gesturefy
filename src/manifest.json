{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "gesturefy@addons.mozilla.org",
      "strict_min_version": "60.0"
    }
  },
  "name": "Gesturefy",
  "version": "2.0.0",
  "description": "__MSG_extensionDescription__",
  "author": "Robbendebiene",
  "homepage_url": "https://github.com/Robbendebiene/Gesturefy",
  "icons": {
    "96": "res/icons/iconx96.png",
    "48": "res/icons/iconx48.png",
    "32": "res/icons/iconx32.png"
  },
  "default_locale": "en",
  "permissions": [
    "<all_urls>",
    "storage",
    "notifications",
    "sessions",
    "browserSettings"
  ],
  "optional_permissions": [
    "tabs",
    "bookmarks",
    "clipboardWrite",
    "clipboardRead",
    "downloads",
    "history"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "match_about_blank": true,
      "all_frames": true,
      "js": [
        "lib/contentCommons.js",
        "lib/zoomHandler.js",
        "lib/gestureHandler.js",
        "lib/gestureIndicator.js",
        "lib/rockerHandler.js",
        "lib/wheelHandler.js",
        "lib/popupHandler.js",
        "lib/content.js"
      ]
    },
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "match_about_blank": true,
      "css": [
        "lib/css/gestureIndicator.css"
      ]
    }
  ],
  "options_ui": {
    "page": "ui/html/index.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "lib/backgroundCommons.js",
      "lib/commands.js",
      "lib/background.js"
    ]
  },
  "web_accessible_resources": [
     "res/fonts/arrows.woff",
     "res/fonts/NunitoSans-Regular.woff",
     "lib/html/popup.html"
  ]
}
